<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationSettings">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/menu_importance"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:hint="@string/label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Is Ongoing -->
        <TextView
            android:id="@+id/textView_isOngoing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="@dimen/margin_top_item_view"
            android:textSize="@dimen/textsize_item_view"
            android:text="Is Ongoing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/menu_importance" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkBox_isOngoing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationX="@dimen/checkbox_translation_default"
            app:layout_constraintBottom_toBottomOf="@id/textView_isOngoing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textView_isOngoing" />

        <!-- Incremental -->
        <TextView
            android:id="@+id/textView_incremental"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_item_view"
            android:textSize="@dimen/textsize_item_view"
            android:text="Incremental"
            app:layout_constraintStart_toStartOf="@id/textView_isOngoing"
            app:layout_constraintTop_toBottomOf="@id/textView_isOngoing"/>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkBox_incremental"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationX="@dimen/checkbox_translation_default"

            app:layout_constraintTop_toBottomOf="@id/checkBox_isOngoing"
            app:layout_constraintStart_toStartOf="@id/checkBox_isOngoing"
            app:layout_constraintBottom_toBottomOf="@id/textView_incremental"/>

        <!-- Channel ID -->
        <TextView
            android:id="@+id/textView_channelID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Channel ID"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/textView_notificationID"
            app:layout_constraintStart_toStartOf="@id/textView_incremental"
            app:layout_constraintTop_toBottomOf="@id/textView_incremental" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkBox_channelID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Channel ID"
            android:visibility="gone"
            android:translationX="@dimen/checkbox_translation_default"
            app:layout_constraintBottom_toBottomOf="@id/textView_channelID"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textView_channelID" />

        <!-- Notification ID -->
        <TextView
            android:id="@+id/textView_notificationID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Notification ID"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/textView_incremental"
            app:layout_constraintTop_toBottomOf="@id/textView_channelID" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkBox_notificationID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="CheckBox"
            android:visibility="gone"
            android:translationX="@dimen/checkbox_translation_default"
            app:layout_constraintBottom_toBottomOf="@id/textView_notificationID"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textView_notificationID" />

        <!-- Is no Clear -->
        <TextView
            android:id="@+id/textView_isNoclear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_item_view"
            android:textSize="@dimen/textsize_item_view"
            android:text="Is no clear"
            app:layout_constraintStart_toStartOf="@id/textView_isOngoing"
            app:layout_constraintTop_toBottomOf="@id/textView_incremental"/>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkBox_isNoclear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationX="@dimen/checkbox_translation_default"
            app:layout_constraintTop_toBottomOf="@id/checkBox_incremental"
            app:layout_constraintStart_toStartOf="@id/checkBox_incremental"
            app:layout_constraintBottom_toBottomOf="@id/textView_isNoclear"/>

        <!-- Is autocancel -->
        <TextView
            android:id="@+id/textView_autocancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_item_view"
            android:textSize="@dimen/textsize_item_view"
            android:text="Is autocancel"
            app:layout_constraintStart_toStartOf="@id/textView_isOngoing"
            app:layout_constraintTop_toBottomOf="@id/textView_isNoclear"/>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkBox_autocancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationX="@dimen/checkbox_translation_default"
            app:layout_constraintTop_toBottomOf="@id/checkBox_isNoclear"
            app:layout_constraintStart_toStartOf="@id/checkBox_isOngoing"
            app:layout_constraintBottom_toBottomOf="@id/textView_autocancel"/>

        <!-- Group notifications? -->
        <TextView
            android:id="@+id/textView_groupNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_item_view"
            android:textSize="@dimen/textsize_item_view"
            android:text="Group notifications"
            app:layout_constraintStart_toStartOf="@id/textView_isOngoing"
            app:layout_constraintTop_toBottomOf="@id/textView_autocancel"/>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkBox_groupNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationX="@dimen/checkbox_translation_default"
            app:layout_constraintTop_toBottomOf="@id/checkBox_autocancel"
            app:layout_constraintStart_toStartOf="@id/checkBox_isOngoing"
            app:layout_constraintBottom_toBottomOf="@id/textView_groupNotifications"/>

        <!-- Is custom -->
        <TextView
            android:id="@+id/textView_isCustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_item_view"
            android:textSize="@dimen/textsize_item_view"
            android:text="Is Custom"
            app:layout_constraintStart_toStartOf="@id/textView_isOngoing"
            app:layout_constraintTop_toBottomOf="@id/textView_groupNotifications"/>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkBox_isCustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationX="@dimen/checkbox_translation_default"
            app:layout_constraintTop_toBottomOf="@id/checkBox_groupNotifications"
            app:layout_constraintStart_toStartOf="@id/checkBox_isOngoing"
            app:layout_constraintBottom_toBottomOf="@id/textView_isCustom"/>

        <!-- Is full screen -->
        <TextView
            android:id="@+id/textView_isFullscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_item_view"
            android:textSize="@dimen/textsize_item_view"
            android:text="Is fullscreen"
            app:layout_constraintStart_toStartOf="@id/textView_isOngoing"
            app:layout_constraintTop_toBottomOf="@id/textView_isCustom"/>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkBox_isFullscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationX="@dimen/checkbox_translation_default"
            app:layout_constraintTop_toBottomOf="@id/checkBox_isCustom"
            app:layout_constraintStart_toStartOf="@id/checkBox_isOngoing"
            app:layout_constraintBottom_toBottomOf="@id/textView_isFullscreen"/>

        <!-- Is scheduled -->
        <TextView
            android:id="@+id/textView_isScheduled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_item_view"
            android:textSize="@dimen/textsize_item_view"
            android:text="Is scheduled"
            app:layout_constraintStart_toStartOf="@id/textView_isOngoing"
            app:layout_constraintTop_toBottomOf="@id/textView_isFullscreen"/>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkBox_isScheduled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationX="@dimen/checkbox_translation_default"
            app:layout_constraintTop_toBottomOf="@id/checkBox_isFullscreen"
            app:layout_constraintStart_toStartOf="@id/checkBox_isOngoing"
            app:layout_constraintBottom_toBottomOf="@id/textView_isScheduled"/>

        <!-- Is delayed -->
        <TextView
            android:id="@+id/textView_isDelayed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_item_view"
            android:textSize="@dimen/textsize_item_view"
            android:text="Is delayed"
            app:layout_constraintStart_toStartOf="@id/textView_isOngoing"
            app:layout_constraintTop_toBottomOf="@id/textView_isScheduled"/>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkBox_isDelayed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationX="@dimen/checkbox_translation_default"
            app:layout_constraintTop_toBottomOf="@id/checkBox_isScheduled"
            app:layout_constraintStart_toStartOf="@id/checkBox_isOngoing"
            app:layout_constraintBottom_toBottomOf="@id/textView_isDelayed"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

